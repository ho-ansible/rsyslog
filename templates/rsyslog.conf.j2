## /etc/rsyslog.conf
## Uploads logs remotely to {{ rsyslog_server }}
## {{ ansible_managed }}

module(load="imuxsock")
module(load="imklog")
module(load="omrelp")

*.*     -{{ rsyslog_file }};RSYSLOG_TraditionalFileFormat

action(type="omrelp" target="{{ rsyslog_server }}" port="{{ rsyslog_port }}")